        <mrow>
          <mo>|</mo>
          <mrow>
            <msup>
              <mi>tan</mi>
              <mrow class="MJX-TeXAtom-ORD">
                <mo>&#x2212;<!-- − --></mo>
                <mn>1</mn>
              </mrow>
            </msup>
            <mo>&#x2061;<!-- ⁡ --></mo>
            <mi>sinh</mi>
